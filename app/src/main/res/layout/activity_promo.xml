<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Tombol Tambah Promo -->

    <!-- RecyclerView atau LinearLayout untuk menampilkan daftar promo -->

    <Button
        android:id="@+id/btnTambahPromo"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFFFFF"
        android:text="PENAWARAN"
        android:textColor="#2A5F0D"
        android:textStyle="bold"
        tools:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- CardView untuk setiap item promo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A9DE96"
                android:backgroundTint="#A9DE96"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Kode Promo -->

                <!-- Deskripsi Promo -->

                <!-- Status Promo -->

                <TextView
                    android:id="@+id/tvDeskripsiPromo"
                    android:layout_width="353dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Promo Discount "
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:translationX="80dp" />

                <Button
                    android:id="@+id/btnStatusPromo"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#4CAF50"
                    android:text="ACTIVE"
                    android:textColor="#FFFFFF"
                    android:translationX="120dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView untuk item promo kedua, sama seperti di atas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#A9DE96"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Kode Promo -->

                <!-- Deskripsi Promo -->
                <TextView
                    android:id="@+id/tvDeskripsiPromo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Promo Discount"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:translationX="80dp" />

                <!-- Status Promo -->
                <Button
                    android:id="@+id/btnStatusPromo2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#4CAF50"
                    android:text="ACTIVE"
                    android:textColor="#FFFFFF"
                    android:translationX="120dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>